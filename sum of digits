#include <iostream>

using namespace std;

float sum_digit(int n){ 
    int sum=0;
    while(n>=1){sum+=n%10;  
                n=n/10;
    }
    return sum;
}

int main(){int i;
    do{ int s=0;
       cout << "Enter an integer number \n";
       cin >> i;
       if(sum_digit(i)>s) s=sum_digit(i); 
       return s;
      }
    while(i!=0)
}
